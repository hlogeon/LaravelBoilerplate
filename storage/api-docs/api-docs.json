{
    "swagger": "2.0",
    "info": {
        "title": "User API",
        "contact": {
            "name": "Andrey Degtyaruk",
            "email": "hlogeon1@gmail.com"
        },
        "version": "1.0.0"
    },
    "host": "",
    "basePath": "/api/user",
    "schemes": [
        "http"
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Get the list of all users",
                "description": "Pagination options can be provided(page and limit)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "type": "integer"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Items per page",
                        "required": false,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "list of users"
                    },
                    "400": {
                        "description": "Invalid response"
                    }
                }
            }
        }
    },
    "definitions": {
        "Error": {
            "required": [
                "code",
                "message"
            ],
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}